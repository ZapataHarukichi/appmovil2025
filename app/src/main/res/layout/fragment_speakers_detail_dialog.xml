<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ui.activities.SplashScreenActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/TvSpeakerDetailDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/TVSpeakerUserDetailDialog"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/logo_user"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/TvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Apellido"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/TvUserJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/TvUserCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trabajo"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/IVTwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_twitter"
                    android:layout_marginTop="8dp"
                    android:padding="1dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="Twitter"/>
                <ImageView
                    android:id="@+id/IvFacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="Facebook"/>
                <ImageView
                    android:id="@+id/IvInstagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_instagram"
                    android:layout_marginTop="8dp"
                    android:padding="1dp"
                    android:contentDescription="Instagram"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TVUserDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/user_work_description"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>